#ifndef GODZI_FEATURES_FEATURE
#define GODZI_FEATURES_FEATURE 1

#include <osgEarthFeatures/Feature>
#include <Godzi/Common>

namespace Godzi { namespace Features {

    class GODZI_EXPORT Feature : public osgEarth::Features::Feature
    {
    public:
        Feature();
        Feature(const Feature& f, const osg::CopyOp& cp = osg::CopyOp::SHALLOW_COPY);

        const std::string getDescription() const { return _description; }
        void setDescription(const std::string& string) { _description = string; }

    protected:
        std::string _description;
        bool _visible;

    };

    typedef std::vector<osg::ref_ptr<Feature> > FeatureList;

}}

#endif
