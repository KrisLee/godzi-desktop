#ifndef GODZI_KML_FEATURE_SOURCE_OPTION
#define GODZI_KML_FEATURE_SOURCE_OPTION 1

#include <osgEarthFeatures/FeatureSource>
#include <Godzi/Common>

namespace Godzi { namespace Features {

        class GODZI_EXPORT KMLFeatureSourceOptions : public osgEarth::Features::FeatureSourceOptions
        {
        public:
            osgEarth::optional<std::string>& url() { return _url; }
            const osgEarth::optional<std::string>& url() const { return _url; }

        public:
						KMLFeatureSourceOptions( const osgEarth::DriverConfigOptions& opt = osgEarth::DriverConfigOptions() ) : osgEarth::Features::FeatureSourceOptions( opt ) {
                setDriver("kml");
                //config().getIfSet<std::string>( "url", _url );
            }

        protected:
            osgEarth::Config toConfig() const {
								osgEarth::Config conf = osgEarth::Features::FeatureSourceOptions::getConfig();
                conf.updateIfSet( "url", _url );
                return conf;
            }

						osgEarth::optional<std::string> _url;
        };


}}
#endif