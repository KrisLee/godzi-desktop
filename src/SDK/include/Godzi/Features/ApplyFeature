#ifndef GODZI_FEATURES_APPLY
#define GODZI_FEATURES_APLLY 1

#include <osg/NodeVisitor>
#include <Godzi/Common>
#include <Godzi/Features/Feature>
#include <osgEarth/MapNode>

namespace Godzi { namespace Features {

    class GODZI_EXPORT ApplyFeature : public osg::NodeVisitor
    {
    public:
        ApplyFeature();
        void setFeatures(const FeatureList& features);
        void apply(osg::CoordinateSystemNode& node);
        void apply(osgEarth::MapNode& node);
        
    protected:
        FeatureList _features;

    };

}}

#endif
