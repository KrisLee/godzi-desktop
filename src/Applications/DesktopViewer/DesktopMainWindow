#ifndef DESKTOP_MAINWINDOW
#define DESKTOP_MAINWINDOW 1

#include <QMainWindow>
#include <Godzi/UI/ViewerWidgets>
#include "ServerManagementWidget"

class DesktopMainWindow : public QMainWindow
{
	Q_OBJECT
	
	public:
		DesktopMainWindow(const std::string& filename);
		
	private slots:
		void open();
		void saveProject();
		void showAbout();
		
	private:
		void CreateActions();
		void CreateMenus();
		void CreateToolbars();
		void CreateDockWindows();
		void UpdateStatusBar(const QString &message);
		void LoadScene(const std::string& filename);
	
		Godzi::UI::ViewerWidget* _osgViewer;
		QAction *_openAction;
		QAction *_saveProjectAction;
		QAction *_aboutAction;
		QMenu *_fileMenu;
		QMenu *_viewMenu;
		QMenu *_helpMenu;
		QToolBar *_fileToolbar;
		ServerManagementWidget *_serverManager;
		
};

#endif // DESKTOP_MAINWINDOW